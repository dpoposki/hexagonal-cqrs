{% extends 'layout.html.twig' %}

{% block body %}

    <div class="text-center mb-4">
        <h2>Forgot your password?</h2>
        <p class="text-muted mb-0">Enter your email address and we'll send you instructions on how to reset your password</p>
    </div>

    {{ form_start(form, { 'attr': { 'class': 'js-form', 'novalidate': '' } }) }}

        {{ form_row(form.email, { 'attr': { 'placeholder': 'name@example.com' }}) }}

        <div class="form-group">
            <button type="submit" class="btn btn-success btn-lg btn-block js-btn">
                <span class="js-btn-icon"></span>Send reset email
            </button>
        </div>

    {{ form_end(form) }}

{% endblock %}
