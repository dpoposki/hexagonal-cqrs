<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>App demo</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body>
        {% for message in app.flashes('global_error') %}
            <div class="alert alert-danger text-center" role="alert">
                <div class="container"><i class="mr-1 fa fa-times-circle"></i> {{ message }}</div>
            </div>
        {% endfor %}
        {% for message in app.flashes('global_success') %}
            <div class="alert alert-success text-center" role="alert">
                <div class="container"><i class="mr-1 fa fa-check-circle"></i> {{ message }}</div>
            </div>
        {% endfor %}

        {% include 'header.html.twig' %}

        {% block body %}{% endblock %}

        {% include 'footer.html.twig' %}

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>